    <script>
        // Initialize dashboard from local storage
        let total = localStorage.getItem('total') || 0;
        let open = localStorage.getItem('open') || 0;
        let closed = localStorage.getItem('closed') || 0;

        function updateDisplay() {
            document.getElementById('totalCount').innerText = total;
            document.getElementById('openCount').innerText = open;
            document.getElementById('closedCount').innerText = closed;
        }

        updateDisplay();

        function setService(val) {
            document.getElementById('userReq').value = val;
            document.getElementById('order-form').scrollIntoView({ behavior: 'smooth' });
        }

        function sendOrder() {
            const name = document.getElementById('userName').value;
            const phone = document.getElementById('userPhone').value;
            const service = document.getElementById('userReq').value;
            const address = document.getElementById('userAddr').value;

            if(!name || !phone) {
                alert("Please fill Name and Phone.");
                return;
            }

            // Update Dashboard Logic
            total++;
            open++;
            localStorage.setItem('total', total);
            localStorage.setItem('open', open);
            updateDisplay();

            // Prepare WhatsApp
            const text = `*NEW BOOKING: FIX PRO*%0A*Customer:* ${name}%0A*Phone:* ${phone}%0A*Service:* ${service}%0A*Address:* ${address}`;
            window.open(`https://wa.me/918248094243?text=${text}`, '_blank');
        }

        function clearStats() {
            if(confirm("Are you sure you want to reset all counts?")) {
                localStorage.clear();
                location.reload();
            }
        }
    </script>
